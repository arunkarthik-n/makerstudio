---
import { css } from '../../styled-system/css';

interface Props {
  name: string;
  role: string;
  bio?: string;
}

const { name, role, bio } = Astro.props;

const initials = name.split(' ').map(n => n[0]).join('').toUpperCase();
---

<div class={css({
  p: '6',
  bg: 'white',
  borderRadius: 'lg',
  border: '1px solid',
  borderColor: 'gray.100',
  transition: 'all 0.2s',
  _hover: {
    borderColor: 'gray.200',
    shadow: 'sm',
  },
})}>
  <div class={css({
    w: '16',
    h: '16',
    display: 'flex',
    alignItems: 'center',
    justifyContent: 'center',
    bg: 'gray.100',
    borderRadius: 'full',
    mb: '4',
    fontSize: 'lg',
    fontWeight: '600',
    color: 'gray.600',
  })}>
    {initials}
  </div>

  <h3 class={css({
    fontSize: 'lg',
    fontWeight: '600',
    color: 'gray.800',
    mb: '1',
  })}>
    {name}
  </h3>

  <p class={css({
    fontSize: 'sm',
    color: 'gray.500',
    mb: bio ? '4' : '0',
  })}>
    {role}
  </p>

  {bio && (
    <p class={css({
      fontSize: 'sm',
      color: 'gray.500',
      lineHeight: '1.7',
    })}>
      {bio}
    </p>
  )}
</div>
