---
import { css } from '../../styled-system/css';

interface Props {
  variant?: 'primary' | 'secondary' | 'outline';
  href?: string;
  type?: 'button' | 'submit';
  class?: string;
}

const { variant = 'primary', href, type = 'button', class: className } = Astro.props;

const baseStyles = css({
  display: 'inline-flex',
  alignItems: 'center',
  justifyContent: 'center',
  px: '6',
  py: '3',
  fontSize: 'sm',
  fontWeight: '500',
  borderRadius: 'md',
  cursor: 'pointer',
  transition: 'all 0.2s',
  textDecoration: 'none',
  border: '1px solid transparent',
});

const variants = {
  primary: css({
    bg: 'gray.800',
    color: 'white',
    _hover: {
      bg: 'gray.700',
    },
  }),
  secondary: css({
    bg: 'gray.100',
    color: 'gray.800',
    _hover: {
      bg: 'gray.200',
    },
  }),
  outline: css({
    bg: 'transparent',
    color: 'gray.800',
    borderColor: 'gray.300',
    _hover: {
      bg: 'gray.50',
    },
  }),
};

const classes = `${baseStyles} ${variants[variant]} ${className || ''}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
