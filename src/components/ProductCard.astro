---
import { css } from '../../styled-system/css';

interface Props {
  name: string;
  url: string;
  description: string;
}

const { name, url, description } = Astro.props;
---

<div class={css({
  p: '6',
  bg: 'white',
  borderRadius: 'lg',
  border: '1px solid',
  borderColor: 'gray.100',
  transition: 'all 0.2s',
  _hover: {
    borderColor: 'gray.200',
    shadow: 'sm',
  },
})}>
  <h3 class={css({
    fontSize: 'lg',
    fontWeight: '600',
    color: 'gray.800',
    mb: '2',
  })}>
    <a href={url} target="_blank" rel="noopener noreferrer" class={css({
      color: 'inherit',
      textDecoration: 'none',
      _hover: { textDecoration: 'underline' },
    })}>{name}</a>
  </h3>

  <p class={css({
    fontSize: 'base',
    color: 'gray.500',
    lineHeight: '1.7',
  })}>
    {description}
  </p>
</div>
