---
import { css } from '../../styled-system/css';
import { Layers, Circle, Link } from 'lucide-astro';

interface Props {
  icon: 'layers' | 'circle' | 'link';
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;

const iconMap = {
  layers: Layers,
  circle: Circle,
  link: Link,
};

const IconComponent = iconMap[icon];
---

<div class={css({
  p: '8',
  bg: 'gray.50',
  borderRadius: 'lg',
  transition: 'all 0.2s',
  _hover: {
    bg: 'gray.100',
  },
})}>
  <div class={css({
    w: '12',
    h: '12',
    display: 'flex',
    alignItems: 'center',
    justifyContent: 'center',
    bg: 'white',
    borderRadius: 'lg',
    mb: '6',
    border: '1px solid',
    borderColor: 'gray.200',
  })}>
    <IconComponent class={css({ w: '6', h: '6', color: 'gray.700' })} />
  </div>

  <h3 class={css({
    fontSize: 'xl',
    fontWeight: '600',
    color: 'gray.800',
    mb: '3',
  })}>
    {title}
  </h3>

  <p class={css({
    fontSize: 'base',
    color: 'gray.500',
    lineHeight: '1.7',
  })}>
    {description}
  </p>
</div>
