---
import { css } from '../../styled-system/css';
import Base from '../layouts/Base.astro';
import Hero from '../components/Hero.astro';
import SectionHeader from '../components/SectionHeader.astro';
import TeamCard from '../components/TeamCard.astro';
import Button from '../components/Button.astro';

const leadership = [
  {
    name: 'Arun Karthik',
    role: 'Founder',
    bio: 'With a passion for human-centric design, Arun sets the strategic vision for MakerStudio, ensuring our products always put users first.',
  },
  {
    name: 'Mohammad Munshi',
    role: 'CTO',
    bio: 'A seasoned software architect and evangelist for functional programming, Mohammad leads our engineering team with a focus on clean, robust, scalable code.',
  },
];

const designTeam = [
  {
    name: 'Suriya',
    role: 'UX Designer',
    bio: 'With experience in interaction design, Suriya collaborates with our engineering team to create products that are both delightful and visually appealing.',
  },
];

const engineeringTeam = [
  {
    name: 'Dinesh Anbazhagan',
    role: 'Backend Engineer',
    bio: 'An Elixir specialist, Dinesh ensures our backend systems are built on a foundation of clean, efficient, scalable code.',
  },
  {
    name: 'Janardhan',
    role: 'Webflow Developer',
    bio: 'Janardhan leverages Webflow to enable rapid prototyping and development of our marketing websites.',
  },
  {
    name: 'Sandip Karmokar',
    role: 'Frontend Engineer',
    bio: 'A CSS, JavaScript, and Liveview expert, Sandip delivers interfaces that are reactive, performant, and inclusive.',
  },
  {
    name: 'Murtaza Munshi',
    role: 'Backend Engineer',
    bio: 'A senior backend engineer, Murtaza architects the robust and scalable systems that power our SaaS products.',
  },
  {
    name: 'Nikhil Mathew',
    role: 'Frontend Engineer',
    bio: 'Nikhil develops responsive and visually appealing React and Tailwind interfaces that enhance user engagement.',
  },
  {
    name: 'Binson',
    role: 'Full Stack Engineer',
    bio: 'Binson builds end-to-end features, seamlessly working across frontend and backend to deliver complete solutions.',
  },
  {
    name: 'Abhiram',
    role: 'Full Stack Engineer',
    bio: 'Abhiram brings versatility to the team, tackling challenges across the entire stack with a focus on quality and performance.',
  },
];
---

<Base title="Our Team" description="Meet the makers behind MakerStudio.">
  <Hero
    title="Meet the Makers"
    subtitle="A diverse team of designers, engineers, and product people united by a shared passion for building great software."
  />

  <!-- Leadership Section -->
  <section class={css({
    py: '16',
    px: { base: '4', md: '8', lg: '16' },
    bg: 'white',
  })}>
    <div class={css({ maxW: '7xl', mx: 'auto' })}>
      <SectionHeader
        title="Leadership"
        subtitle="The founders driving our vision."
      />

      <div class={css({
        display: 'grid',
        gridTemplateColumns: { md: 'repeat(2, minmax(0, 1fr))' },
        gap: '6',
        maxW: '3xl',
        mx: 'auto',
      })}>
        {leadership.map(member => (
          <TeamCard name={member.name} role={member.role} bio={member.bio} />
        ))}
      </div>
    </div>
  </section>

  <!-- Design Team Section -->
  <section class={css({
    py: '16',
    px: { base: '4', md: '8', lg: '16' },
    bg: 'white',
  })}>
    <div class={css({ maxW: '7xl', mx: 'auto' })}>
      <SectionHeader
        title="Design"
        subtitle="Creating experiences users love."
      />

      <div class={css({
        display: 'grid',
        gridTemplateColumns: { md: 'repeat(2, minmax(0, 1fr))', lg: 'repeat(3, minmax(0, 1fr))' },
        gap: '6',
      })}>
        {designTeam.map(member => (
          <TeamCard name={member.name} role={member.role} bio={member.bio} />
        ))}
      </div>
    </div>
  </section>

  <!-- Engineering Team Section -->
  <section class={css({
    py: '16',
    px: { base: '4', md: '8', lg: '16' },
    bg: 'gray.50',
  })}>
    <div class={css({ maxW: '7xl', mx: 'auto' })}>
      <SectionHeader
        title="Engineering"
        subtitle="Turning designs into reality."
      />

      <div class={css({
        display: 'grid',
        gridTemplateColumns: { md: 'repeat(2, minmax(0, 1fr))', lg: 'repeat(3, minmax(0, 1fr))', xl: 'repeat(4, minmax(0, 1fr))' },
        gap: '6',
      })}>
        {engineeringTeam.map(member => (
          <TeamCard name={member.name} role={member.role} bio={member.bio} />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class={css({
    py: '16',
    px: { base: '4', md: '8', lg: '16' },
    bg: 'white',
    textAlign: 'center',
  })}>
    <div class={css({ maxW: '2xl', mx: 'auto' })}>
      <h2 class={css({
        fontSize: { base: '2xl', md: '3xl' },
        fontWeight: '600',
        color: 'gray.800',
        mb: '4',
        letterSpacing: '-0.02em',
      })}>
        Want to Join Us?
      </h2>
      <p class={css({
        fontSize: 'lg',
        color: 'gray.500',
        mb: '8',
        lineHeight: '1.7',
      })}>
        We're always looking for talented people who share our values.
      </p>
      <Button href="/join-the-team" variant="primary">
        Join The Team
      </Button>
    </div>
  </section>
</Base>
